html 
    head 
        meta(charset='UTF-8')
        title Timothys Restaurant Selector
        script(src='/js/addRest.js' defer)
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(link rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet")
        link(rel = "stylesheet" href='/css/addRest.css')

body 
    div.restBtns
        ul.aUL
            li.aLI
                a(href='/home').aBtn Home
            li.aLI
                a(href='/addRestaurant').aBtn Add Restaurant
            li.aLI
                a(href='/restaurants').aBtn Browse Restaurants
    div.restInfo
        table(style='width:40%; text-align:left; min-width:400px;')
            tr 
                th(value = id)#id Restaurant ID:#{rest.id}
            tr 
                th Restaurant Name:
                td 
                    input(type="text"  style='width:50%' value=rest.name)#name
            tr 
                th Minimum Order:
                td 
                    input(type="text" value = rest.min_order style='width:50%')#minorder
            tr 
                th Delivery Fee:
                td 
                    input(type="text" value = rest.delivery_fee style='width:50%')#deliveryFee
            tr 
                td 
                    br
            tr 
                th Add Category: 
                td 
                    input(type="text" placeholder = "" style='width:50%;')#category
                    button(type="submit" style='width:30%;')#catBtn Add Category
            tr 
                td 
                    br
            tr
                th Add Item:
            tr
                th Category: 
                td 
                    select#categoryDrop
                        each category in categories
                            option #{category} 


            tr 
                th Item Name: 
                td 
                    input(type="text" placeholder = "" style='width:50%;')#itemName   
            tr 
                th Item Description: 
                td 
                    input(type="text" placeholder = "" style='width:50%;')#itemDescription
            tr 
                th Item Price: 
                td 
                    input(type="text" placeholder = "" style='width:50%;')#itemPrice  
            tr
                th 
                    br
                td
                    button(type="submit" style='width:50%;')#itemBtn Add Item

    div.menu
        details
            summary MENU:
            div#catList
                each category in categories
                    div#itemList
                        ul(id=category) #[b #{category}]
                            each item in rest.menu[category]
                                li Name: #{item.name} Description: #{item.description} Price: $#{item.price}
        
    button(type="submit" )#saveBtn Submit Restaurant

        
        
